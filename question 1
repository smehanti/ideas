
customer=input("customer's time ? ")          # checkout time for each customer

customer_time=customer.split(" ")

cashier=int(input('number of cashier? '))      # Number of cashiers

customer_time.append(cashier)

for i in range(len(customer_time)):
    customer_time[i]= int(customer_time[i])

customer1=[]

for j in range(len(customer)):

    if customer[j] != ' ':                #since the space we give is counted as a string so we ignore the spacing.
        customer1.append(customer[j])
customer=customer1

print('\n The list is : ', customer_time)
# print(type(max(customer)))

if cashier==int(1):
    print('Total time : ' , sum(customer_time)-1)

elif len(customer)<= int(cashier):
    print('total time : ' , max(customer))

elif len(customer)> int(cashier):
    if max(customer_time) == sum(customer_time) - int(max(customer_time)):
        print("total time : ", max(customer_time))
    elif max(customer_time) > int(sum(customer_time)) - int(max(customer_time)):
        print("total time : " , max(customer_time))
    else:
        print("total time : ", int(sum(customer_time))- int(max(customer_time)) - int(cashier))


else:
    pass
# print('sum: ', sum(customer_time))
